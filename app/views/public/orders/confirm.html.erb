<h3>注文情報確認</h3>

<table border="1" style="border-collapse: collapse">
  <thead align="left">
    <th height="50" width="300">商品名</th>
    <th width="100">単価(税込)</th>
    <th width="100">数量</th>
    <th width="100">小計</th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td height="50"><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td> <!-- item.rb -->
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td> <!-- cart_item.rb -->
      </tr>
      <% @total_price += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>

<table border="1" style="border-collapse: collapse">
  <tr>
    <th height="50" width="100">送料</th>
    <td width="100"><%= @order.postage = 800 %></td>
  </tr>
  <tr>
    <th height="50">商品合計</th>
    <td><%= @total_price.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th height="50">請求金額</th><% @order.payment = @total_price + @order.postage %>
    <td><%= @order.payment.to_s(:delimited) %></td>
  </tr>
</table>

<table>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td>
      〒<%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
</table>
<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :payment %>
  <%= f.hidden_field :postage %>
  <%= f.hidden_field :payment_method %>
  <%= f.submit "注文を確定する", class: "btn btn-success" %>
<% end %>
