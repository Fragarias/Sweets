<h3>注文履歴一覧</h3>

<table class="table" border="1" style="border-collapse: collapse">
  <thead align="left">
    <th height="50" width="200">注文日</th>
    <th width="800">配送先</th>
    <th width="200">注文商品</th>
    <th width="120">支払金額</th>
    <th width="180">注文詳細</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td height="50"><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% @order_details = OrderDetail.where(order_id: order.id) %>
          <% @order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
          <% end %>
        </td>
        <td><%= order.payment.to_s(:delimited) %>円</td>
        <td>
          <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>