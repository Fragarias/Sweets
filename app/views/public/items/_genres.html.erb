<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th width="200">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td height="50" style="border-top: none;">
          <%= link_to genre.name, items_path(genre_id: genre.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>