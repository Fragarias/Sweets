<h3>ショッピングカート</h3>

<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>

<% @cart_items.each do |cart_item| %>
  <table class="table" border="1" style="border-collapse: collapse">
    <thead align="left">
      <th height="50" width="300">商品名</th>
      <th width="100">単価(税込)</th>
      <th width="100">数量</th>
      <th width="100">小計</th>
      <th width="100"></th>
    </thead>
    <tbody>
      <tr>
        <td height="50"><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td> <!-- item.rb -->
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch, local: true do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td> <!-- cart_item.rb -->
        <td>
          <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
  </table>
  <% @total_price += cart_item.subtotal %>
<% end %>
<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
<table class="table" border="1" style="border-collapse: collapse">
  <tbody align="left">
    <tr>
      <th width="100" height="50">合計金額</th><td width="100"><%= @total_price.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>
<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
