<h3>新規会員登録</h3>

<!--%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table style="border-collapse: collapse">
    <tbody>
      <tr align="left">
        <td height="50" width="200">名前</td>
        <td width="500">
          <%= f.label "(姓)" %>
          <%= f.text_field :last_name %>
          <%= f.label "(名)" %>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr align="left">
        <td height="50">フリガナ</td>
        <td>
          <%= f.label "(セイ)" %>
          <%= f.text_field :last_name_kana %>
          <%= f.label "(メイ)" %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr align="left">
        <td height="50">メールアドレス</td>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
      <tr align="left">
        <td height="50">郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr align="left">
        <td height="50">住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr align="left">
        <td height="50">電話番号(ハイフンなし)</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr align="left">
        <td height="50">
          パスワード
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr align="left">
        <td height="50">パスワード(確認用)</td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

<h3>既に登録済みの方</h3>
