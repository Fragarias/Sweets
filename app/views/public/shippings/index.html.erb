<h3>配送先登録/一覧</h3>

<%= form_with model: @shipping, url: shippings_path, method: :post, local: true do |f| %>
  <table>
    <tbody>
      <tr align="left">
        <th height="50" width="300">郵便番号(ハイフンなし)</th>
        <td width="600"><%= f.text_field :postal_code %></td>
      </tr>
      <tr align="left">
        <th height="50">住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr align="left">
        <th height="50">宛名</th>
        <td><%= f.text_field :name %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

<table class="table" border="1" style="border-collapse: collapse">
  <thead align="left">
    <th height="50" width="100">郵便番号</th>
    <th width="400">住所</th>
    <th width="100">宛名</th>
    <th width="250"></th>
  </thead>
  <tbody>
    <% @shippings.each do |shipp| %>
      <tr>
        <td height="50"><%= shipp.postal_code %></td>
        <td><%= shipp.address %></td>
        <td><%= shipp.name %></td>
        <td>
          <%= link_to "編集する", edit_shipping_path(shipp.id), class: "btn btn-success" %>
          <%= link_to "削除する", shipping_path(shipp), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
