<h3>配送先編集</h3>

<%= form_with model: @shipping, url: shipping_path(@shipping.id), method: :patch, local: true do |f| %>
  <table>
    <tbody>
      <tr align="left">
        <th height="50" width="300">郵便番号(ハイフンなし)</th>
        <td width="600"><%= f.text_field :postal_code %></td>
      </tr>
      <tr align="left">
        <th height="50">住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr align="left">
        <th height="50">宛名</th>
        <td><%= f.text_field :name %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "変更内容を保存", class: "btn btn-success" %>
<% end %>