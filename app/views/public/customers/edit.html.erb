<div class="container px-5 px-sm-0">
  <div class="row m-3 pt-3">
    <div class="col-3">
      <h3 class="bg text-center">会員情報編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <%= form_with model: @customer, url: customers_update_path do |f| %>
        <table style="border-collapse: collapse">
          <tbody>
            <tr align="left">
              <td height="50" width="200">氏名</td>
              <td width="500"><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
            </tr>
            <tr align="left">
              <td height="50">フリガナ</td>
              <td><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></td>
            </tr>
            <tr align="left">
              <td height="50">郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr align="left">
              <td height="50">住所</td>
              <td><%= f.text_field :address, size: "70" %></td>
            </tr>
            <tr align="left">
              <td height="50">電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr align="left">
              <td height="50">メールアドレス</td>
              <td><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
          </tbody>
        </table>
        <div class="row justify-content-around mt-3">
          <div class="col-3">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
          <div class="col-3">
            <%= link_to "退会する", customers_quit_path, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
