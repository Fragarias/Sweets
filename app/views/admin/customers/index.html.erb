<h3>会員一覧</h3>

<table class="table">
  <thead align="left">
    <th height="50" width="100">会員ID</th>
    <th width="200">氏名</th>
    <th width="250">メールアドレス</th>
    <th width="200">ステータス</th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td height="50">
          <%= customer.id %>
        </td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
          <% end %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <% if customer.is_active == true %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>
