<div class="container px-5 px-sm-0">
  <div class="row m-3 pt-3">
    <div class="col-2">
      <h3 class="bg text-center">会員一覧</h3>
    </div>
  </div>
  <div class="col-11">
    <table class="table" style="border-collapse: collapse">
      <thead class="bg" align="left">
        <th height="50" width="100">会員ID</th>
        <th width="200">氏名</th>
        <th width="250">メールアドレス</th>
        <th width="200">ステータス</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td height="50">
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer.id), class: "link-dark" do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_active == true %>
                <div class="text-success font-weight-bold">有効</div>
              <% else %>
                <div class="text-secondary font-weight-bold">退会</div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @customers %>
</div>
