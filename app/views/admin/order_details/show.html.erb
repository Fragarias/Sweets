<h3>注文履歴詳細</h3>

<table>
  <tr>
    <th>購入者</th>
    <td>
      <%= link_to admin_customer_path(@order.customer.id) do %>
        <%= @order.customer.last_name %> <%= @order.customer.first_name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch, local: true do |f| %>
        <%= f.select :status, Order.statuses.keys.map{|k|[I18n.t("enums.order.status.#{k}"), k]} %>
        <%= f.submit "変更", class: "btn btn-success" %>
      <% end %>
    </td>
  </tr>
</table>

<table border="1" style="border-collapse: collapse">
  <thead align="left">
    <th height="50" width="300">商品名</th>
    <th width="100">単価(税込)</th>
    <th width="100">数量</th>
    <th width="100">小計</th>
    <th width="300">製作ステータス</th>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td height="50"><%= order_detail.item.name %></td>
        <td><%= order_detail.price.to_s(:delimited) %></td>
        <td><%= order_detail.amount %></td>
        <td>
          <% @subtotal = order_detail.price * order_detail.amount %>
          <%= @subtotal.to_s(:delimited) %>
        </td>
        <td>
          <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true do |f| %>
              <%= f.select :production_status, OrderDetail.production_statuses.keys.map{|k|[I18n.t("enums.order_detail.production_status.#{k}"), k]} %>
              <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
      </tr>
      <% @total_price += @subtotal %>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><%= @total_price.to_s(:delimited) %>円</td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.postage.to_s(:delimited) %>円</td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <th>
      <% total = @total_price + @order.postage %>
      <%= total.to_s(:delimited) %>円
    </th>
  </tr>
</table>