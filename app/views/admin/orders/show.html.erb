<h3><%= @customer.first_name %><%= @customer.last_name %>さんの注文履歴</h3>

<table>
  <thead>
    <tr align="left">
      <th width="300" height="50">購入日時</th>
      <th width="300">注文個数</th>
      <th width="300">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr align="left">
        <td height="50">
          <%= link_to admin_order_detail_path(order.id) do %>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
        </td>
        <td><%= order.order_details.all.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>
