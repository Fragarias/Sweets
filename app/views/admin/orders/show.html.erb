<div class="container px-5 px-sm-0">
  <div class="row m-3 pt-3">
    <div class="col-5">
      <h3 class="bg text-center"><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <table class="table" style="border-collapse: collapse">
        <thead class="bg" align="left">
          <th width="200" height="50">購入日時</th>
          <th width="200">注文個数</th>
          <th width="200">注文ステータス</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr align="left">
              <td height="50">
                <%= link_to admin_order_detail_path(order.id), class: "link-dark" do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>
              <td><%= order.order_details.all.sum(:amount) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders %>

</div>