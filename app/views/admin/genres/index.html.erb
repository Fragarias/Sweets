<div class="container px-5 px-sm-0">
  <div class="row m-4">
    <div class="col-3">
      <h4 class="bg text-center">ジャンル一覧・追加</h4>
    </div>
  </div>
  <div class="row pt-4 pb-5">
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
      <b class="px-4">ジャンル名</b>
      <%= f.text_field :name, placeholder: "ジャンル名" %>
      <%= f.submit "新規登録", class: "ml-4 btn btn-success" %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-5">
      <table class="table">
        <thead class="bg" align="center">
          <th width="350" height="50">ジャンル</th>
          <th width="250"></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td valign="middle" height="50"><%= genre.name %></td>
              <td class="justify-content-center">
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>