<div class="container px-5 px-sm-0">
  <div class="row m-4">
    <div class="col-3">
      <h4 class="bg text-center">ジャンル編集</h4>
    </div>
  </div>
  <div class="row pt-4 pb-5">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
      <b class="px-4">ジャンル名</b>
      <%= f.text_field :name %>
      <%= f.submit "変更を保存", class: "ml-4 btn btn-success" %>
    <% end %>
  </div>
</div>
