<div class="container px-5 px-sm-0">
  <div class="row m-3">
    <div class="col-2 offset-1">
      <h4 class="bg text-center">商品詳細</h4>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-4">
      <%= image_tag @item.get_image(300, 350) %>
    </div>
    <div class="col-6">
      <table style="border-collapse: collapse">
        <tbody>
          <tr align="left">
            <td height="50" width="150">商品名</td>
            <td width="300"><%= @item.name %></td>
          </tr>
          <tr align="left">
            <td height="50">商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr align="left">
            <td height="50">ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr align="left">
            <td height="50">税込価格<br>(税抜価格)</td>
            <td><%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
          </tr>
          <tr align="left">
            <td height="50">販売ステータス</td>
            <td>
              <% if @item.is_sale == true %>
                <div class="text-success font-weight-bold">販売中</div>
              <% else %>
                <div class="text-secondary font-weight-bold">販売停止中</div>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
  </div>
</div>
