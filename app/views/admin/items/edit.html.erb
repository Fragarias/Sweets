<h3>商品編集</h3>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local: true do |f| %>
  <table style="border-collapse: collapse">
    <tbody>
      <tr align="left">
        <td height="50" width="200">商品画像</td>
        <td width="500"><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr align="left">
        <td height="50">商品名</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr align="left">
        <td height="50">商品説明</td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr align="left">
        <td height="50">ジャンル</td>
        <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
      </tr>
      <tr align="left">
        <td height="50">税抜価格</td>
        <td><%= f.text_field :price %>円</td>
      </tr>
      <tr align="left">
        <td height="50">販売ステータス</td>
        <td>
          <%= f.radio_button :is_sale, "true" %>
          <%= f.label :is_sale_true, "販売中" %>
          <%= f.radio_button :is_sale, "false" %>
          <%= f.label :is_sale_false, "販売停止中" %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>