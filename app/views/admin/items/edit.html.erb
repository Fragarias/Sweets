<div class="container px-5 px-sm-0">
  <div class="row m-3">
    <div class="col-2 offset-1">
      <h4 class="bg text-center">商品編集</h4>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local: true do |f| %>
      <table style="border-collapse: collapse">
        <tbody>
          <tr>
            <td align="left" height="50" width="150">商品画像</td>
            <td width="500"><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td align="left" height="50">商品名</td>
            <td><%= f.text_field :name, size: "40" %></td>
          </tr>
          <tr>
            <td align="left" height="50">商品説明</td>
            <td><%= f.text_area :introduction, size: "40×60" %></td>
          </tr>
          <tr>
            <td align="left" height="50">ジャンル</td>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
          </tr>
          <tr>
            <td align="left" height="50">税抜価格</td>
            <td><%= f.text_field :price, size: "40" %>円</td>
          </tr>
          <tr>
            <td align="left" height="50">販売ステータス</td>
            <td>
              <%= f.radio_button :is_sale, "true" %>
              <%= f.label :is_sale_true, "販売中" %>
              <%= f.radio_button :is_sale, "false" %>
              <%= f.label :is_sale_false, "販売停止中" %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
