<h3>商品一覧</h3>

<%= link_to "商品新規登録", new_admin_item_path %>

<table class="table">
  <thead align="left">
    <th height="50" width="150">商品ID</th>
    <th width="400">商品名</th>
    <th width="150">税抜価格</th>
    <th width="150">ジャンル</th>
    <th width="150"></th>
    <th width="150">ステータス</th>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td height="50">
          <%= item.id %>
        </td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td>
          <%= item.price.to_s(:delimited) %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td></td>
        <td>
          <% if item.is_sale == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>
