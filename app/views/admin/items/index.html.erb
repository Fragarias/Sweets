<h3>商品一覧</h3>

<%= link_to "商品新規登録", new_admin_item_path %>

<table class="table">
  <thead>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td>
          <%= item.price.to_s(:delimited) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>
