<div class="container px-5 px-sm-0">
  <div class="row m-3 pt-3">
    <div class="col-2">
      <h3 class="bg text-center">商品一覧</h3>
    </div>
    <div class="col-1 offset-9 text-center">
      <%= link_to new_admin_item_path, class: "btn btn-light rounded-circle p-0", style: "width:3rem;height:3rem;", method: :get do %>
        <i class="fa-solid fa-plus fa-lg"></i>
      <% end %>
    </div>
  </div>

  <table class="table" style="border-collapse: collapse">
    <thead class="bg" align="left">
      <th height="50" width="150">商品ID</th>
      <th width="400">商品名</th>
      <th width="150">税抜価格</th>
      <th width="150">ジャンル</th>
      <th width="150"></th>
      <th width="150">ステータス</th>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td height="50">
            <%= item.id %>
          </td>
          <td>
            <%= link_to admin_item_path(item.id), class: "link-dark" do %>
              <%= item.name %>
            <% end %>
          </td>
          <td>
            <%= item.price.to_s(:delimited) %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td></td>
          <td>
            <% if item.is_sale == true %>
              <div class="text-success font-weight-bold">販売中</div>
            <% else %>
              <div class="text-secondary font-weight-bold">販売停止中</div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= paginate @items %>
  </div>
</div>
